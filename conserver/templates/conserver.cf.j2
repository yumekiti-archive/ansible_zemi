# The character '&' in logfile names are substituted with the console
# name.
#
config * {
}
default full {
        rw *;
}
default * {
        master localhost;
        baud 9600;
        parity none;
        motd "Type Ctrl-E, C, '.' to close this session";

        logfile /var/log/conserver/&.log;
        timestamp "";
        include full;
}
console com0 {
        type device;
        device /dev/ttyUSB0;
}
